<section id="about" class="text-center p-5">
	<h1 class="mb-4"><%= __('about.mission.title') %></h1>
	<p class="lead"><%= __('about.mission.text') %></p>
</section>

<section id="why_us" class="bg-light-custom py-5">
	<div class="container">
		<h2 class="text-center mb-4"><%= __('about.why_us.title') %></h2>
		<div class="row text-center">
			<div class="col-md-3 mb-4">
				<i class="bi bi-award display-5 text-brand"></i>
				<p class="mt-2"><%= __('about.why_us.certified') %></p>
			</div>
			<div class="col-md-3 mb-4">
				<i class="bi bi-person-check display-5 text-brand"></i>
				<p class="mt-2"><%= __('about.why_us.guidance') %></p>
			</div>
			<div class="col-md-3 mb-4">
				<i class="bi bi-calendar2-check display-5 text-brand"></i>
				<p class="mt-2"><%= __('about.why_us.booking') %></p>
			</div>
			<div class="col-md-3 mb-4">
				<i class="bi bi-translate display-5 text-brand"></i>
				<p class="mt-2"><%= __('about.why_us.multilingual') %></p>
			</div>
		</div>
	</div>
</section>

<section id="offer" class="container py-5">
	<h2 class="text-center mb-4"><%= __('about.offer.title') %></h2>
	<div class="row text-center">
		<div class="col-md-4 mb-4">
			<i class="bi bi-book display-4 text-brand mb-2"></i>
			<h5><%= __('about.offer.full_courses') %></h5>
			<p><%= __('about.offer.full_courses_desc') %></p>
		</div>
		<div class="col-md-4 mb-4">
			<i class="bi bi-person-plus display-4 text-brand mb-2"></i>
			<h5><%= __('about.offer.improvement_lessons') %></h5>
			<p><%= __('about.offer.improvement_lessons_desc') %></p>
		</div>
		<div class="col-md-4 mb-4">
			<i class="bi bi-car-front display-4 text-brand mb-2"></i>
			<h5><%= __('about.offer.car_rental') %></h5>
			<p><%= __('about.offer.car_rental_desc') %></p>
		</div>
	</div>
</section>

<section id="areas" class="bg-light-custom py-5 text-center">
	<h2 class="mb-4"><%= __('about.areas.title') %></h2>
	<p class="mb-0"><%= __('about.areas.list') %></p>
</section>

<section id="reviews" class="py-5">
	<div class="container">
		<h2 class="text-center mb-4"><%= __('about.testimonials.title') %></h2>

		<% if (reviews && reviews.length > 0) { %>
		<div class="row justify-content-center">
			<% reviews.forEach((review) => { %>
			<div class="col-md-5 mb-4">
				<div class="card p-3 shadow-sm h-100 text-center">
					<img
						src="<%= review.profile_photo_url %>"
						alt="<%= review.author_name %>"
						class="rounded-circle mx-auto mb-3"
						width="60"
						height="60"
						loading="lazy"
						referrerpolicy="no-referrer"
					/>
					<blockquote class="blockquote">
						<p class="mb-2">“<%= review.text %>”</p>
					</blockquote>
					<footer class="blockquote-footer">
						<%= review.author_name %>
						<img
							src="/images/icons/google.svg"
							alt="Google"
							width="16"
							class="ms-1"
						/>
					</footer>
				</div>
			</div>
			<% }) %>
		</div>
		<% } else { %>
		<p class="text-center text-muted"
			><%= __('about.testimonials.none') %></p
		>
		<% } %>
	</div>
</section>

<section id="contact" class="text-center py-5 bg-dark-custom">
	<h2 class="mb-3 text-dark"><%= __('about.contact.title') %></h2>
	<div class="text-muted">
		<p><%= __('about.contact.description') %></p>
		<p class="mb-1">1510 boul. Henri-Bourassa Ouest, Suite 205</p>
		<p class="mb-0"
			>+1 (514) 246-4688 | +1 (514) 557-8710 | <%=
			__('about.contact.text_only') %>: +1 (514) 914-9996</p
		>
	</div>
</section>
