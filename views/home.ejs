</section>

<section class="text-center py-5 bg-dark-custom text-white">
	<h3><%= __('start_today') %></h3>
	<a href="/booking" class="btn btn-light btn-lg mt-3">
		<i class="bi bi-calendar-event me-1"></i> <%= __('book_now') %>
