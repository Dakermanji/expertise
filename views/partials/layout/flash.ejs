<!-- views/partials/layout/flash.ejs -->
<% const { success, error } = messages; %>
<% if (success?.length || error?.length) { %>
<div class="position-fixed top-50 start-50 translate-middle w-100 px-3 z-3 flash-container" style="max-width: 500px">

	<%
		// ðŸ’¡ Helper: Render a Bootstrap alert block
		const renderAlert = (type, text, live) => {
	%>
		<div
			class="alert alert-<%= type %> alert-dismissible fade show text-center"
			role="alert"
			aria-live="<%= live %>"
		>
			<%= __(text) %>
			<button
				type="button"
				class="btn-close"
				data-bs-dismiss="alert"
				aria-label="Close"
			></button>
		</div>
	<% } %>

	<% if (error?.length) { %>
		// ðŸ”´ Error
		<% renderAlert("danger", error[0], "assertive"); %>
	<% } %>

	<% if (success?.length) { %>
		// ðŸŸ¢ Success
		<% renderAlert("success", success[0], "polite"); %>
	<% } %>

</div>
<% } %>
