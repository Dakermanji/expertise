<!-- views/partials/index/hero.ejs -->
<!-- ---------------------------------------------------------
   ðŸ¦¸ Hero Section (Autoplay + Tap-to-Unmute + Overlay Play)
--------------------------------------------------------- -->
<section id="hero" class="hero text-center p-3 p-md-5">

	<div class="custom-video-wrapper position-relative">

		<!-- â–¶ï¸ Big Play Overlay (YouTube-style) -->
		<button
	        id="bigPlayOverlay"
	        class="big-play-overlay d-flex justify-content-center align-items-center"
	        aria-label="Unmute Video"
>
	            <i class="bi bi-volume-mute-fill"></i>
        </button>

		<!-- ðŸŽ¬ Main Video -->
		<video
			id="expertiseVideo"
			class="w-100 rounded shadow"
			preload="none"
			autoplay
			muted
			playsinline
			controlsList="nodownload"
			poster="/videos/Expertise-Pro-Image.jpg"
		>
			<source
				src="/videos/Expertise-Pro-<%= currentLang.toUpperCase() %>.mp4"
				type="video/mp4"
			/>
			<%= __('hero.video_fallback', 'Votre navigateur ne supporte pas la vidÃ©o.') %>
		</video>

		<!-- ðŸŽ› Custom Video Controls -->
		<div class="video-controls d-flex justify-content-center align-items-center gap-3 p-2 mt-2">

			<!-- Play/Pause -->
			<button id="playPauseBtn" class="btn btn-outline-primary" aria-label="Play / Pause video">
				<i class="bi bi-pause-fill"></i>
			</button>

			<!-- Seek bar -->
			<input
				id="seekBar"
				type="range"
				class="form-range"
				value="0"
				min="0"
				max="100"
				step="0.1"
				aria-label="Video position"
			/>

			<!-- Volume -->
			<div class="d-flex align-items-center gap-2">
				<i id="volumeIcon" class="bi bi-volume-up-fill"></i>
				<input
					id="volumeControl"
					type="range"
					min="0"
					max="1"
					step="0.01"
					value="1"
					class="form-range w-auto"
					aria-label="Volume control"
				/>
			</div>

		</div>

	</div>

</section>
