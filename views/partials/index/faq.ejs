<section id="faq" class="py-5">
	<div class="container">
		<h2 class="text-center mb-4"><%= __('faq.faq_title') %></h2>

		<div class="accordion" id="faqAccordion">
			<% const faqList = Object.entries(__('faq.list')); %> <%
			faqList.forEach(([key, faq], index) => { %>
			<div class="accordion-item">
				<h2 class="accordion-header" id="faq<%= index + 1 %>">
					<button
						class="accordion-button collapsed question"
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#collapse<%= index + 1 %>"
						aria-expanded="false"
						aria-controls="collapse<%= index + 1 %>"
					>
						<%= faq.q %>
					</button>
				</h2>
				<div
					id="collapse<%= index + 1 %>"
					class="accordion-collapse collapse answer"
					data-bs-parent="#faqAccordion"
				>
					<div class="accordion-body"> <%= faq.a %> </div>
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</section>
