<form action="/booking" method="POST">
	<div class="row g-3">
		<div class="col-md-6">
			<input
				type="hidden"
				name="serviceType"
				value="improvement_lessons"
			/>
			<label for="student_name" class="form-label fw-bold">
				<%= __('form.name') %>
			</label>
			<input
				type="text"
				name="student_name"
				id="student_name"
				class="form-control"
				required
			/>
		</div>

		<div class="col-md-6">
			<label for="phone" class="form-label fw-bold">
				<%= __('form.phone') %>
			</label>
			<input
				type="tel"
				name="phone"
				id="phone"
				class="form-control"
				required
			/>
		</div>

		<div class="col-md-6">
			<label for="email" class="form-label fw-bold">
				<%= __('form.email') %>
			</label>
			<input type="email" name="email" id="email" class="form-control" />
		</div>

		<div class="col-md-6">
			<label for="region" class="form-label fw-bold">
				<%= __('form.region') %>
			</label>
			<select name="region" id="region" class="form-select" required>
				<% const regions = __('regions'); for (const key in regions) {
				%>
				<option value="<%= key %>"><%= regions[key] %></option>
				<% } %>
			</select>
		</div>

		<div class="col-md-4">
			<label for="preferred_date" class="form-label fw-bold">
				<%= __('form.preferred_date') %>
			</label>
			<input
				type="date"
				name="preferred_date"
				id="preferred_date"
				class="form-control"
				required
			/>
		</div>

		<div class="col-md-4">
			<label for="preferred_time" class="form-label fw-bold">
				<%= __('form.preferred_time') %>
			</label>
			<input
				type="time"
				name="preferred_time"
				id="preferred_time"
				class="form-control"
			/>
		</div>

		<div class="col-md-4">
			<label for="preferred_language" class="form-label fw-bold">
				<%= __('form.preferred_language') %>
			</label>
			<select
				name="preferred_language"
				id="preferred_language"
				class="form-select"
			>
				<option value="en">English</option>
				<option value="fr">Français</option>
				<option value="ar">العربية</option>
			</select>
		</div>

		<div class="col-12">
			<label for="notes" class="form-label fw-bold">
				<%= __('form.notes') %>
			</label>
			<textarea
				name="notes"
				id="notes"
				class="form-control"
				rows="3"
			></textarea>
		</div>
	</div>

	<input type="hidden" name="service_type" value="improvement_lessons" />

	<div class="alert alert-warning small mt-4" role="alert">
		<%- __('booking.disclaimer') %>
	</div>

	<div class="text-center mb-4">
		<button type="submit" class="btn btn-primary mt-3">
			<i class="bi bi-send me-1"></i> <%= __('form.submit') %>
		</button>
	</div>
</form>
